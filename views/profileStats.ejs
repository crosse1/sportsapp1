  window.addEventListener('resize', () => {
    if (!stateMapRuntime.initialized) return;
    if (stateMapResizeHandle) clearTimeout(stateMapResizeHandle);
    stateMapResizeHandle = setTimeout(() => {
      renderStateVenueIcons();
    }, 150);
