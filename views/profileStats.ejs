  display: flex;
  flex-direction: column;
  gap: 0.5rem;
}

#venuesModalBody {
  display: flex;
  flex-direction: column;
  gap: 0.5rem;
}

#venuesModalBody .stat-row {
  display: grid;
  grid-template-columns: 2fr 5fr 1fr;
  column-gap: 0.5rem;
  row-gap: 0;
  align-items: center;
}

#venuesModalBody .stat-row:not(:last-child) {
