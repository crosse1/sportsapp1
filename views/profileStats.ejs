        }

        .games-toggle input {
            position: absolute;
            opacity: 0;
            pointer-events: none;
        }

        .games-toggle .toggle-track {
            position: absolute;
            inset: 0;
            border-radius: inherit;
            background: linear-gradient(135deg, rgba(20, 184, 166, 0.25), rgba(126, 34, 206, 0.25));
            transition: background 0.3s ease, opacity 0.3s ease;
        }

        .games-toggle .toggle-thumb {
            position: relative;
            width: 24px;
            height: 24px;
            border-radius: 50%;
