    <script>
(function initChainLogos() {
  const wrapper = document.querySelector('.profile-avatar-wrapper');
  if (!wrapper) return;

  const avatarImg = wrapper.querySelector('.profile-avatar');
  const logos = Array.from(wrapper.querySelectorAll('.chain-logo'));

  if (!logos.length) return;

  const layout = () => {
    const w = wrapper.clientWidth || wrapper.offsetWidth;
    const h = wrapper.clientHeight || wrapper.offsetHeight;
    if (!w || !h) return;

    const cx = w / 2;
    const cy = h / 2;
    const radius = Math.max(w, h) * 0.6; // same geometry as before
    const n = logos.length;
    const step = Math.PI / (n + 1);

    logos.forEach((el, i) => {
      const ang = Math.PI - step * (i + 1);
      const size = el.offsetWidth || 42;
      const x = cx + radius * Math.cos(ang) - size / 2;
      const y = cy + radius * Math.sin(ang) - size / 2;
      el.style.left = x + 'px';
      el.style.top  = y + 'px';
      el.style.opacity = '1';
      el.style.visibility = 'visible';
    });
  };

  const afterImages = (cb) => {
    const imgs = [avatarImg, ...logos.map(a => a.querySelector('img')).filter(Boolean)];
    let remaining = imgs.length;
    if (remaining === 0) return cb();

    const done = () => { if (--remaining === 0) cb(); };

    imgs.forEach(img => {
      if (!img) return done();
      if (img.complete && img.naturalWidth > 0) return done();
      img.addEventListener('load', done, { once: true });
      img.addEventListener('error', done, { once: true });
    });
  };

  // Hide until positioned to avoid flicker
  logos.forEach(el => { el.style.visibility = 'hidden'; el.style.opacity = '0'; });

  afterImages(() => {
    layout();
    // Re-layout on resize (debounced)
    let t;
    const onResize = () => { clearTimeout(t); t = setTimeout(layout, 100); };
    window.addEventListener('resize', onResize, { passive: true });
  });
})();
</script>

