<style>
  /* === Profile Header: unified, page-agnostic styles === */
.profile-avatar-wrapper {
  position: relative;
  width: clamp(120px, 20vw, 200px);
  height: clamp(120px, 20vw, 200px);
}

.profile-avatar {
  width: 100%;
  height: 100%;
  border-radius: 50%;
  object-fit: cover;
  border: 2px solid rgba(255,255,255,0.8);
  display: block;
}

/* Ensure every page uses the same logical 'lg' size */
.avatar-lg {
  width: 100%;
  height: 100%;
}

/* Chain logos around the avatar */
.chain-logo {
  position: absolute;          /* critical for positioning */
  width: 42px;
  height: 42px;
  display: inline-block;
  transform: translateZ(0);    /* avoid blurriness on some browsers */
}

.chain-logo img {
  width: 100%;
  height: 100%;
  object-fit: cover;
  border-radius: 50%;
  border: 2px solid #fff;
  background: #fff;
  display: block;
}

@media (max-width: 767.98px) {
  .follow-users-btn,
  .add-game-btn {
    width: 100%;
    max-width: 300px; /* optional, keeps it tidy */
  }
}

@media (max-width: 767.98px) {
  .profile-header .d-flex.justify-content-between {
    justify-content: center !important;
  }

  .profile-header .d-flex.justify-content-between .d-flex {
    justify-content: center;
    flex-wrap: wrap;     /* allow wrapping if needed */
    gap: .5rem;
  }

  .profile-header h2 {
    text-align: center;
    width: 100%;         /* push username to full width if needed */
  }
}

@media (max-width: 767.98px) {
  .follow-users-btn,
  .add-game-btn {
    width: 100%;
    max-width: 300px;
  }
}


/* Make sure nothing on pages overrides these with different sizes */

.search-dropdown {
  position: absolute;
  top: 100%;
  left: 0;
  right: 0;
  background: rgba(0, 0, 0, 0.6);
  border: 1px solid rgba(255,255,255,0.2);
  border-radius: 0.5rem;
  backdrop-filter: blur(10px);
  z-index: 1000;
  max-height: 200px;
  overflow-y: auto;
}

.suggestion-item {
  padding: 0.5rem;

  font-weight: 700;
  color: #fff;
}

.suggestion-item:hover {
  background: linear-gradient(to right,#14b8a6,#7e22ce);
}

</style>
